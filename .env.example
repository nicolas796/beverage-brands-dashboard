# Beverage Brands Dashboard - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - add it to .gitignore!

# ==========================================
# REQUIRED VARIABLES
# ==========================================

# Database URL
# For local development with SQLite:
DATABASE_URL=sqlite:///./beverage_brands.db
# For Render with persistent disk:
# DATABASE_URL=sqlite:////app/data/beverage_brands.db
# For PostgreSQL (Render paid tier):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Secret - Generate a secure random string for production
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters

# API Port
API_PORT=8000

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# React App API URL
# For local development:
REACT_APP_API_URL=http://localhost:8000
# For production (relative URL - same domain):
# REACT_APP_API_URL=

# Frontend build path (for serving static files)
FRONTEND_BUILD_PATH=../frontend/build

# ==========================================
# CORS CONFIGURATION
# ==========================================

# Comma-separated list of allowed origins
# For local development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
# For production on Render:
# CORS_ORIGINS=https://your-app-name.onrender.com,https://*.onrender.com

# ==========================================
# RAPIDAPI CONFIGURATION (REQUIRED FOR SOCIAL SYNC)
# ==========================================

# Your RapidAPI key - get from https://rapidapi.com
RAPIDAPI_KEY=your-rapidapi-key-here

# RapidAPI Hosts (usually don't need to change)
RAPIDAPI_TIKTOK_HOST=tiktok-api.p.rapidapi.com
RAPIDAPI_INSTAGRAM_HOST=instagram-looter.p.rapidapi.com

# Rate limiting (seconds between API calls to avoid rate limits)
TIKTOK_RATE_LIMIT_DELAY=4
INSTAGRAM_RATE_LIMIT_DELAY=4

# ==========================================
# GOOGLE SHEETS SYNC (OPTIONAL)
# ==========================================

# Google Sheets document ID (from URL)
GOOGLE_SHEETS_ID=your-google-sheets-id

# Google Service Account JSON (paste entire JSON content)
# Get this from Google Cloud Console > Service Accounts > Keys
GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# Auto-sync interval in hours (set to 0 to disable)
AUTO_SYNC_HOURS=6

# ==========================================
# OPTIONAL / ADVANCED
# ==========================================

# Node environment
NODE_ENV=development

# Python path (for Docker/containerized environments)
# PYTHONPATH=/app
